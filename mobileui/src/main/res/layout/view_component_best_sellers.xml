<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutComponentBestSellers"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp">

    <TextView
            android:id="@+id/textBestSellersLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16sp"
            android:textColor="@color/greyish_4A4A4A"
            android:fontFamily="@font/robotobold"
            android:text="@string/best_sellers"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/viewBestSellersTopDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textBestSellersLabel"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewBestSellers"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@+id/viewBestSellersTopDivider"
            app:layout_constraintStart_toStartOf="@+id/viewBestSellersTopDivider"
            app:layout_constraintTop_toBottomOf="@+id/viewBestSellersTopDivider"/>

</android.support.constraint.ConstraintLayout>