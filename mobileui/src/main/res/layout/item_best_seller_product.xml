<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/layoutItemProductLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

    <ImageView
            android:id="@+id/imageProduct"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            tools:src="@tools:sample/avatars"/>

    <TextView
            android:id="@+id/textProductName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:ellipsize="end"
            android:fontFamily="@font/robotomedium"
            android:lines="2"
            android:textSize="18sp"
            tools:text="@tools:sample/lorem"
            app:layout_constraintStart_toEndOf="@+id/imageProduct"
            app:layout_constraintEnd_toStartOf="@+id/imageProductRightArrow"/>


    <TextView
            android:id="@+id/textProductPreviousPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/robotomedium"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/textProductCurrentPrice"
            app:layout_constraintTop_toTopOf="@+id/textProductCurrentPrice"
            app:layout_constraintTop_toBottomOf="@+id/textProductName"
            app:layout_constraintStart_toEndOf="@+id/imageProduct"
            tools:text="@tools:sample/lorem" android:layout_marginBottom="8dp"/>

    <ImageView
            android:id="@+id/imageProductRightArrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@null"
            android:src="@drawable/ic_right_arrow"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    <TextView
            android:id="@+id/textProductCurrentPrice"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:fontFamily="@font/robotobold"
            android:textColor="@color/tomato"
            android:textSize="20sp"
            app:layout_constraintTop_toBottomOf="@+id/imageProductRightArrow"
            app:layout_constraintEnd_toStartOf="@+id/imageProductRightArrow"
            tools:text="@tools:sample/lorem"
    />

</android.support.constraint.ConstraintLayout>