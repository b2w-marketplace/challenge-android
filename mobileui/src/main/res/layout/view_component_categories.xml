<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/layoutComponentCategories"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="15dp"
>

    <TextView
            android:id="@+id/textCategoriesLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:textSize="16sp"
            android:textColor="@color/greyish_4A4A4A"
            android:fontFamily="@font/robotobold"
            android:text="@string/categories"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/viewCategoriesTopDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textCategoriesLabel"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/recyclerViewCategories"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintEnd_toEndOf="@+id/viewCategoriesTopDivider"
            app:layout_constraintStart_toStartOf="@+id/viewCategoriesTopDivider"
            app:layout_constraintTop_toBottomOf="@+id/viewCategoriesTopDivider"/>

    <View
            android:id="@+id/viewCategoriesBottomDivider"
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/line_divider"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/recyclerViewCategories"/>

</android.support.constraint.ConstraintLayout>
