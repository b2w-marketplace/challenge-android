<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="br.com.dafle.alodjinha">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name="br.com.dafle.alodjinha.LodjinhaApplication"
        android:allowBackup="true"
        android:hardwareAccelerated="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity
            android:parentActivityName="br.com.dafle.alodjinha.ui.products.ProductsActvity"
            android:name="br.com.dafle.alodjinha.ui.products.details.ProductDetails"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="br.com.dafle.alodjinha.ui.products.ProductsActvity"
            android:parentActivityName="br.com.dafle.alodjinha.ui.main.MainActivity"
            android:configChanges="orientation|screenSize"/>
        <activity
            android:name="br.com.dafle.alodjinha.ui.splash.SplashActivity"
            android:theme="@style/NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="br.com.dafle.alodjinha.ui.main.MainActivity"
            android:theme="@style/NoActionBar"
            android:configChanges="orientation|screenSize"/>
    </application>

</manifest>