<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ToolBarTheme" parent="AppTheme">
        <item name="android:textColorPrimary">@color/white_2</item>
        <item name="android:textColorSecondary">@color/white_2</item>
        <item name="actionMenuTextColor">@color/white_2</item>
    </style>

    <style name="DividerStyle">
        <item name="android:background">@color/white</item>
    </style>

    <style name="DefaultTitle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">17sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="CategoryName" parent="android:Widget.TextView">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ProductName" parent="android:Widget.TextView">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ProductOldPrice" parent="android:Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="ProductNewPrice" parent="android:Widget.TextView">
        <item name="android:textColor">@color/tomato</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LogoStyle" parent="android:Widget.TextView">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/white_2</item>
    </style>

    <style name="AboutStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">64sp</item>
    </style>

    <style name="AboutDevNameStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="AboutDeliveryDateStyle" parent="android:Widget.TextView">
        <item name="android:textColor">@color/greyishBrown</item>
        <item name="android:textSize">12sp</item>
    </style>
</resources>
