<resources>

    <!-- MENU -->
    <style name="Header.Title" parent="AppTheme">
        <item name="android:text">@string/app_name</item>
        <item name="android:textColor">@color/white_two</item>
        <item name="android:textSize">24sp</item>
    </style>

    <!-- HOME CATEGORY -->
    <style name="Home.Category.Title" parent="AppTheme">
        <item name="android:text">@string/categories_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Home.Category.Description" parent="AppTheme">
        <item name="android:textSize">13sp</item>
    </style>

    <!-- PRODUCTS -->
    <style name="Home.Product.Title" parent="AppTheme">
        <item name="android:text">@string/sellers_products_title</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="Product.Name" parent="AppTheme">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="Product.FromPrice" parent="AppTheme">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Product.ToPrice" parent="AppTheme">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/tomato</item>
    </style>

    <!-- ABOUT -->
    <style name="About.App" parent="AppTheme">
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:textSize">64sp</item>
        <item name="android:text">@string/app_name</item>
        <item name="android:gravity">center_horizontal</item>
    </style>

    <style name="About.Developer" parent="AppTheme">
        <item name="android:text">@string/developer_name</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/dark</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="About.Date" parent="AppTheme">
        <item name="android:text">@string/developer_date</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@color/greyish_brown</item>
        <item name="android:gravity">center</item>
    </style>
</resources>
