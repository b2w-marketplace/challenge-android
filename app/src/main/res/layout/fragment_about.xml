<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/logo_sobre"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="64dp"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/appCompatImageViewLogo"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/app_name"
            android:fontFamily="@font/pacifico"
            android:textColor="@color/greyish_brown"
            android:textSize="64sp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="8dp"
            app:layout_constraintHorizontal_bias="1.0"
            android:layout_marginTop="32dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageViewLogo"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDevelopName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/develop_name"
            android:fontFamily="@font/roboto_medium"
            android:textSize="14sp"
            android:textColor="@color/greyish_brown"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.0"
            android:layout_marginTop="8dp"
            android:gravity="center"
            app:layout_constraintTop_toBottomOf="@+id/textViewName" android:layout_marginBottom="16dp"
            app:layout_constraintBottom_toTopOf="@+id/textViewDevelopmentDate"
            app:layout_constraintVertical_bias="1.0"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textViewDevelopmentDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/development_date"
            android:fontFamily="@font/roboto_medium"
            android:textSize="12sp"
            android:textColor="@color/greyish"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="16dp" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginRight="16dp"
            app:layout_constraintHorizontal_bias="0.75"
            android:gravity="center"
            android:layout_marginBottom="32dp" app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>