<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <FrameLayout
            android:id="@+id/bannerFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
            android:id="@+id/categoriesTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/categories"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/bannerFragment"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/categoriaSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyish"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/categoriesTitle"/>

    <FrameLayout
            android:id="@+id/categoriaFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/categoriaSeparator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    <View
            android:id="@+id/maisVendidosSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyish"
            app:layout_constraintTop_toBottomOf="@id/categoriaFragment"/>

    <TextView
            android:id="@+id/maisVendidosTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mais_vendidos"
            android:layout_margin="12dp"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/maisVendidosSeparator"
            app:layout_constraintStart_toStartOf="parent"/>

    <View
            android:id="@+id/maisVendidosListSeparator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="12dp"
            android:background="@color/greyish"
            app:layout_constraintTop_toBottomOf="@id/maisVendidosTitle"/>

    <FrameLayout
            android:id="@+id/maisVendidosFragment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/maisVendidosListSeparator"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>