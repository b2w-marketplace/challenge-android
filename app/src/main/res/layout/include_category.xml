<merge
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        tools:showIn="@layout/fragment_home">

    <TextView
            android:id="@+id/fragmentHomeCategoryTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Home.Category.Title"
            fontPath="fonts/Roboto-Medium.ttf"
            tools:ignore="MissingPrefix"
            android:layout_margin="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentHomeBannersIndicator"
            app:layout_constraintBottom_toTopOf="@+id/fragmentHomeCategoryDivider"
            app:layout_constraintStart_toStartOf="parent"/>
    <View
            android:id="@+id/fragmentHomeCategoryDivider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/greyish"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@+id/fragmentHomeCategoryTitle"/>

    <android.support.v7.widget.RecyclerView
            android:id="@+id/fragmentHomeCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            tools:listitem="@layout/item_category"
            tools:orientation="horizontal"
            app:layoutManager="android.support.v7.widget.LinearLayoutManager"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/fragmentHomeCategoryDivider"/>
</merge>