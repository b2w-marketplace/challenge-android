<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="@dimen/base_grid">

    <ImageView
        android:id="@+id/iv_category_list_image"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="@string/category_list_image"/>

    <TextView
        android:id="@+id/tv_category_list_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="120dp"
        android:gravity="center"
        android:maxLines="2"
        android:ellipsize="end"
        tools:text="Descrição do Produto Com Textão" />

</LinearLayout>