<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_categoria"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:clipToPadding="false"
    tools:context="br.com.lodjinha.alodjinha.controller.CategoriaActivity">

    <include layout="@layout/toolbar_home" android:id="@+id/toolbarCategoria"></include>

    <include layout="@layout/progressbar_custom"></include>

    <include layout="@layout/progressbar_custom_categoria"></include>

    <LinearLayout
        android:orientation="vertical"
        android:layout_below="@id/toolbarCategoria"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <include layout="@layout/lista_customizada_categoria"/>

    </LinearLayout>

</RelativeLayout>
