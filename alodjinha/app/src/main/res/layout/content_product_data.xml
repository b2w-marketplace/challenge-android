<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/product_long_title_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="{product.name}"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/product_price_borders"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/product_details_price_borders"
        app:layout_constraintBottom_toBottomOf="@+id/product_sellingprice_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/product_long_title_txt" />

    <TextView
        android:id="@+id/product_originalprice_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_marginRight="8dp"
        android:maxLines="2"
        android:text="{product.originalPrice}"
        android:textColor="@color/greyish"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@+id/product_sellingprice_txt"
        app:layout_constraintHorizontal_bias="0"
        app:layout_constraintLeft_toLeftOf="@+id/product_long_title_txt"
        app:layout_constraintRight_toLeftOf="@+id/product_sellingprice_txt"
        app:layout_constraintTop_toTopOf="@+id/product_sellingprice_txt" />

    <TextView
        android:id="@+id/product_sellingprice_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:maxLines="2"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:text="{product.seice}"
        android:textColor="@color/tomato"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/product_originalprice_txt"
        app:layout_constraintRight_toRightOf="@+id/product_long_title_txt"
        app:layout_constraintBottom_toBottomOf="@+id/product_price_borders"
        app:layout_constraintTop_toTopOf="@+id/product_price_borders" />

    <TextView
        android:id="@+id/product_title_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="{product.name}"
        app:layout_constraintEnd_toEndOf="@+id/product_long_title_txt"
        app:layout_constraintStart_toStartOf="@+id/product_long_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/product_price_borders"
        tools:layout_editor_absoluteY="88dp" />

    <TextView
        android:id="@+id/product_description_txt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="{product.name}"
        app:layout_constraintEnd_toEndOf="@+id/product_long_title_txt"
        app:layout_constraintStart_toStartOf="@+id/product_long_title_txt"
        app:layout_constraintTop_toBottomOf="@+id/product_title_txt" />

</android.support.constraint.ConstraintLayout>
