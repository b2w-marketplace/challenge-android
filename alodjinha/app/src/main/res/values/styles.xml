<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="LodjinhaTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LodjinhaTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="LodjinhaTheme.Toolbar">
        <item name="android:fontFamily" tools:targetApi="jelly_bean">@font/pacifico</item>
        <item name="android:textSize">30sp</item>
    </style>

    <style name="LodjinhaTheme.ToolbarTheme">
        <item name="colorControlNormal">@android:color/black</item>
    </style>

    <style name="LodjinhaTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="LodjinhaTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="LodjinhaTheme.MenuItems">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="MenuItems" parent="LodjinhaTheme">
        <item name="android:textSize">14sp</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-medium</item>
    </style>

    <style name="LodjinhaTheme.SellingPriceTextView">
        <item name="android:gravity">end</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/tomato</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LodjinhaTheme.OriginalPriceTextView">
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/greyish</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>
