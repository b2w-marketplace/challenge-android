<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <ImageView
            android:contentDescription="@null"
            android:id="@+id/about_logo"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/logo_sobre"
            android:layout_marginTop="100dp"
            android:layout_width="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/about_app_name"
            style="@style/LodjinhaFont"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sixty_four"
            android:text="@string/app_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_logo"
            android:textColor="@color/greyishBrown"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerInside"/>

    <TextView
            android:id="@+id/about_app_dev_name"
            style="@style/RobotoFontMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen"
            android:text="@string/about_dev_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_app_name"
            android:textColor="@color/greyishBrown"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerInside"/>

    <TextView
            android:id="@+id/about_app_dev_date"
            style="@style/RobotoFontMedium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/fourteen"
            android:text="@string/about_dev_date"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/about_app_dev_name"
            android:textColor="@color/greyish"
            app:layout_constraintEnd_toEndOf="parent"
            android:scaleType="centerInside"/>

</android.support.constraint.ConstraintLayout>