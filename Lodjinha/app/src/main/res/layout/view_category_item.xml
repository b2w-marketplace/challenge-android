<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:paddingTop="@dimen/margin_default"
        android:id="@+id/view_category_container"
        android:layout_height="wrap_content">

    <ImageView
            android:id="@+id/view_category_image"
            android:layout_width="60dp"
            android:contentDescription="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:src="@drawable/logo_menu"
            android:layout_height="60dp"/>

    <TextView
            app:layout_constraintBottom_toBottomOf="parent"
            style="@style/RobotoFontMedium"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:id="@+id/view_category_text"
            app:layout_constraintTop_toBottomOf="@+id/view_category_image"
            android:layout_width="125dp"
            android:lines="2"
            android:ellipsize="end"
            android:layout_height="wrap_content"
            tools:text="@string/categories"/>
</android.support.constraint.ConstraintLayout>