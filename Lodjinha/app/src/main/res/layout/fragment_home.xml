<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:attrs="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            tools:context=".MainActivity">

        <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="0dp"
                app:cardElevation="7dp">

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <android.support.v4.view.ViewPager
                        android:id="@+id/view_pager_banners"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/banner_height"/>

                <com.rd.PageIndicatorView
                        android:id="@+id/pageIndicatorView"
                        app:piv_animationType="scale"
                        app:piv_viewPager="@id/view_pager_banners"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_marginBottom="@dimen/banner_indicator_margin_vertical"
                        android:layout_alignBottom="@+id/view_pager_banners"
                        app:piv_selectedColor="@color/indicator_selected"
                        app:piv_unselectedColor="@color/indicator"
                        attrs:piv_padding="@dimen/banner_indicator_margin_horizontal"
                        attrs:piv_radius="@dimen/banner_indicator_radius"/>

            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <TextView
                android:layout_margin="10dp"
                android:text="@string/categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <include layout="@layout/divider_layout"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        <include layout="@layout/divider_layout"/>

        <TextView
                android:layout_margin="10dp"
                android:text="@string/best_sellers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        <include layout="@layout/divider_layout"/>

        <android.support.v7.widget.RecyclerView
                android:id="@+id/recyler_best_sellers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


    </LinearLayout>
</android.support.v4.widget.NestedScrollView>