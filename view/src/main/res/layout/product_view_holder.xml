<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    
    <ImageView
            android:id="@+id/ivProductPhoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:contentDescription="@string/products"
            android:src="@android:drawable/ic_menu_report_image"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:id="@+id/tvProductName"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textSize="18sp"
            android:gravity="start"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProductPhoto"
            app:layout_constraintEnd_toStartOf="@drawable/disclosure_indicator"
            tools:targetApi="jelly_bean"/>
    
    <TextView
            android:id="@+id/priceFrom"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/greyWish"
            android:textSize="12sp"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@+id/tvProductName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/ivProductPhoto"
            tools:targetApi="jelly_bean"/>
    
    <TextView
            android:id="@+id/priceFor"
            android:layout_width="125dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto_bold"
            android:textColor="@color/tomato"
            android:textSize="18sp"
            android:gravity="start"
            app:layout_constraintTop_toBottomOf="@+id/tvProductName"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/priceFrom"
            tools:targetApi="jelly_bean"/>
    
    <ImageView
            android:id="@+id/ivDisclosureIndicator"
            android:layout_width="15dp"
            android:layout_height="0dp"
            android:contentDescription="@string/products"
            android:src="@drawable/disclosure_indicator"
            android:layout_marginEnd="10dp"
            android:layout_marginRight="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
</android.support.constraint.ConstraintLayout>