<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="RtlHardcoded"
    android:layout_height="@dimen/menu_header_height"
    android:background="@drawable/menu_pattern">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/margin_normal"
        android:padding="@dimen/margin_border"
        android:src="@drawable/logo_menu"
        android:background="@drawable/bg_logo_menu"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_small"
        android:textSize="@dimen/toolbar_home_text_size"
        android:textColor="@color/white_two"
        android:text="@string/app_name"
        app:fontFamily="@font/pacifico_regular"/>

</RelativeLayout>