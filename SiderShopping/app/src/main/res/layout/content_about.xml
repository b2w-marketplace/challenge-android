<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AboutActivity"
    tools:showIn="@layout/app_bar_about">

    <ImageView
        android:id="@+id/logo_sobre"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/logo_sobre"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.20" />

    <TextView
        android:id="@+id/nome_loja"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Sider Shopping"
        app:layout_constraintTop_toBottomOf="@id/logo_sobre"
        app:layout_constraintStart_toStartOf="@id/logo_sobre"
        app:layout_constraintEnd_toEndOf="@id/logo_sobre"
        android:layout_margin="20dp"
        android:textSize="50sp"/>

    <TextView
        android:id="@+id/nome_desenvolvedor"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Matheus Martins de Sales"
        app:layout_constraintBottom_toTopOf="@id/data"
        app:layout_constraintStart_toStartOf="@id/data"
        app:layout_constraintEnd_toEndOf="@id/data"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/data"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="04 de Maio de 2019"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="20dp"
        android:textSize="16sp"/>


</android.support.constraint.ConstraintLayout>